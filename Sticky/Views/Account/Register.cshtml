@model Sticky.Models.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<section class="vh-100 d-flex align-items-center">
    <div class="container-fluid h-custom">
        <div class="row d-flex justify-content-center align-items-center h-100">
          
            <div class="col-md-6 col-lg-5">
                <form asp-action="Register" method="post" class="needs-validation" novalidate>
                    <h3 class="fw-normal mb-4 pb-3" style="letter-spacing: 1px;">Create Account</h3>

                    <div class="form-outline mb-4">
                        <label asp-for="Username" class="form-label"></label>
                        <input asp-for="Username" class="form-control form-control-lg" />
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>

                    <div class="form-outline mb-4">
                        <label asp-for="Password" class="form-label"></label>
                        <input asp-for="Password" type="password" class="form-control form-control-lg" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="form-outline mb-4">
                        <label asp-for="ConfirmPassword" class="form-label"></label>
                        <input asp-for="ConfirmPassword" type="password" class="form-control form-control-lg" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>

                    <div class="pt-1 mb-4">
                        <button type="submit" class="btn btn-lg btn-block"
                                style="background-color: #709085; color: white; width: 100%;">
                            Register
                        </button>
                    </div>

                    <p class="small mb-5 pb-lg-2">
                        <a asp-action="Login" class="text-muted">I already have an account</a>
                    </p>
                </form>
            </div>

            
            <div class="col-md-6 col-lg-5 offset-lg-1 d-flex align-items-center">
                <div class="text-center">
                    <div class="mb-4">
                        <i class="fas fa-crow fa-4x me-3" style="color: #709085;"></i>
                        <span class="h1 fw-bold" style="color: #709085;">Sticky</span>
                    </div>
                    <p class="lead" style="color: #709085;">
                        Your productivity starts here
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>

@section Styles {
    <style>
        body {
            background-color: #f8f9fa;
        }

        .h-custom {
            height: calc(100% - 73px);
        }

        .form-control-lg {
            padding: 0.5rem 1rem;
            font-size: 1rem;
        }
    </style>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
}